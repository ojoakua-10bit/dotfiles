#!/bin/bash

sleep 6 #time for the main conky to start; needed so that the smaller ones draw above not below (probably can be lower, but we still have to wait 5s for the rings to avoid segfaults)
conky -c /home/anon/.local/share/conky/themes/conky-rings/cpu.lua &
sleep 1
conky -c /home/anon/.local/share/conky/themes/conky-rings/mem.lua &
conky -c /home/anon/.local/share/conky/themes/conky-rings/notes.lua &
conky -c /home/anon/.local/share/conky/themes/conky-rings/wifi.lua &
sleep 3 #time (in s) for the DE to start; use ~20 for Gnome or KDE, less for Xfce/LXDE etc
conky -c /home/anon/.local/share/conky/themes/conky-rings/rings.lua & # the main conky with rings
conky -c /home/anon/.local/share/conky/themes/conky-rings/lan.lua &
