## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (h) VGA ON, (j) HDMI ON, (k) VGA OFF, (l) HDMI OFF
mode "$mode_display" {
    bindsym h exec --no-startup-id xrandr --output 
    bindsym j exec --no-startup-id xrandr --output HDMI1 --auto --right-of eDP1, mode "default"
    bindsym k exec --no-startup-id xrandr --output eDP1 --auto --off, mode "default"
    bindsym l exec --no-startup-id xrandr --output HDMI1 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
